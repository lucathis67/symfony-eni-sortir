<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ sortie.nom }}</h5>
        <p class="card-title">{{ sortie.dateHeureDebut | format_datetime('full', 'short', locale='fr') }}</p>
        <p class="card-title">{{ sortie.dateLimiteInscription | format_datetime('full', 'short', locale='fr') }}</p>
        <p class="text text-muted">{{ sortie.infosSortie }}</p>
        <p>{{ sortie.participants.count }}/{{ sortie.nbInscriptionsMax }}</p>
        <p>{{ sortie.organisateur.prenom }}</p>
        <div>
            {% for participant in sortie.participants %}
                {% if participant.id == app.user.id %}<a>Se DÃ©sister</a>{% endif %}
            {% else %}
                <a href="#">S'inscrire</a>
            {% endfor %}
            {% if sortie.organisateur == app.user %}
                <a href="#">Modifier</a>
                <a href="#">Publier</a>
            {% endif %}
            <a href="#">Afficher</a>
        </div>
    </div>
</div>
