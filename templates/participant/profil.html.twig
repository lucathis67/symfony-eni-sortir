{% extends 'base.html.twig' %}

{% block title %}Gestion du profil{% endblock %}

{% block body %}

    <div>
        <h1>Modification de mon profil</h1>
    </div>

    <div class="image-participant">
        <div>
            {% if participant.photo %}
                <img src="{{ asset('uploads/photos/'~participant.photo) }}" alt="{{ participant.pseudo }}">
            {% else %}
                <img src="{{ asset("img/user-default.png") }}" alt="{{ participant.pseudo }}">
            {% endif %}
        </div>
    </div>
    <div class="participant-infos">
        {{ form_start(participantForm, {'attr': {'id': 'modifProfil'}}) }}
        <input type="hidden" name="id"
               value="{{ participant.id }}"
        >
        {{ form_widget(participantForm) }}

        <button type="submit" class="btn">Enregistrer</button>

        <button type="button" class="btn">
            <a href="{{ path('participant_afficher',{'id': app.user.id }) }}">
                Annuler
            </a>
        </button>
        <button type="button" class="btn">
            <a href="{{ path('participant_editPassword') }}">
                Modifier le mot de passe
            </a>
        </button>
        {{ form_end(participantForm) }}
    </div>

{% endblock %}
